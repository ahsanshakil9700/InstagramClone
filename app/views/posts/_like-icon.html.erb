<% if is_liked.present? %>
  <%= link_to like_path(is_liked), method: :delete, remote: true  do %>
    <%= image_tag "red heart.png", class: "loved hide-text" %>
    <% end %>
<% else %>
  <%= link_to post_likes_path(post), method: :post, remote: true  do %>
    <%= image_tag "heart.png", class: "love hide-text" %>
  <% end %>
<% end %>
